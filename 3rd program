#include <stdio.h>
#include<conio.h>
 int main() { 
   int number; 
   float sum=0.0, n1, n2; 
   clrscr(); 
   printf("\n Enter the value of number: "); 
   scanf ("%d", &number); 
   for(n2=1.0;n2<=number;n2++) { 
      n1=1/n2; 
      sum = sum +n1; 
    } 
    printf("\n The sum of series 1/1 + 1/2 +... + l/%d = %f",number,sum); 
    return 0; 
 }
